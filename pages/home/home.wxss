.container {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.container swiper {
  width: 85%;
  position: fixed;
  top: 15rpx;
  overflow: hidden;
  border-radius: 30rpx;
}

.container swiper image {
  width: 100%;
}

.bgImage {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 0;
}

.copyright {
  position: absolute;
  z-index: 10;
}